{
    "compilerOptions": {
        "rootDir": "src",
        "outDir": "dist",
        "target": "es2020",
        "lib": [
            "es2020"
        ],
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "strict": true,
        "sourceMap": true,
        "esModuleInterop": true,
        "declaration": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "skipLibCheck": true
    }
}